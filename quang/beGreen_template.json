{
  "domain": "beGreen",
  "version": "1.1",
  "slides": [
    {
      "type": "cover",
      "desc": "Intro slide with title, subtitle, and ownership metadata.",
      "elements": [
        { "kind": "text", "field": "title", "required": true, "desc": "Main project title", "source": ["title", "project.name"] },
        { "kind": "text", "field": "subtitle", "required": false, "desc": "Mission or tagline", "source": ["mission", "tagline"] },
        { "kind": "meta", "field": "owner", "required": false, "desc": "Team or organization name", "source": ["org.owner", "team.name"] },
        { "kind": "meta", "field": "date", "required": false, "desc": "Presentation date", "source": ["doc.date"] }
      ]
    },
 
    {
      "type": "summary",
      "desc": "Executive summary with key project info.",
      "elements": [
        { "kind": "bullets", "field": "summary_points", "required": true, "itemDesc": "Each bullet: key data such as objective, duration, users, impact", "source": ["summary.points", "project.overview"] }
      ]
    },
 
    {
      "type": "objectives",
      "desc": "Vision or main objectives.",
      "elements": [
        { "kind": "bullets", "field": "objectives", "required": true, "itemDesc": "Short, measurable objectives", "source": ["objectives", "goals"] }
      ]
    },
 
    {
      "type": "scope",
      "desc": "In-scope and out-of-scope overview.",
      "elements": [
        { "kind": "paragraph", "field": "in_scope", "required": true, "desc": "Items in current phase", "source": ["scope.in"] },
        { "kind": "paragraph", "field": "out_scope", "required": false, "desc": "Deferred or future items", "source": ["scope.out"] }
      ]
    },
 
    {
      "type": "features",
      "desc": "List of core system features.",
      "elements": [
        { "kind": "bullets", "field": "features", "required": true, "itemDesc": "Feature name — short value statement (max 10)", "source": ["features.list", "capabilities"] }
      ]
    },
 
    {
      "type": "chart",
      "desc": "Optional bar/column chart for metrics or adoption.",
      "elements": [
        {
          "kind": "chart",
          "field": "chart_data",
          "required": false,
          "chartSpec": {
            "title": { "desc": "Chart title" },
            "categories": { "desc": "X-axis labels" },
            "series": { "desc": "Array of series with numeric values" }
          },
          "source": ["charts.bar", "charts.column", "metrics.chart"]
        }
      ]
    },
 
    {
      "type": "roadmap",
      "desc": "Product roadmap table (by phases or quarters).",
      "elements": [
        {
          "kind": "table",
          "field": "timeline",
          "required": true,
          "tableSpec": {
            "headers": ["Phase", "Timeline", "Key Deliverables"],
            "rows": { "desc": "One row per phase" }
          },
          "source": ["roadmap.table", "plan.timeline"]
        }
      ]
    },
 
    {
      "type": "architecture",
      "desc": "Technical / solution architecture summary.",
      "elements": [
        { "kind": "bullets", "field": "layers", "required": true, "itemDesc": "Layer name — technology stack", "source": ["architecture.layers", "solution.techstack"] }
      ]
    },
 
    {
      "type": "roles",
      "desc": "Governance and key roles.",
      "elements": [
        { "kind": "bullets", "field": "roles", "required": true, "itemDesc": "Role — responsibility", "source": ["governance.roles", "stakeholders.roles"] }
      ]
    },
 
    {
      "type": "risks",
      "desc": "Main risks and mitigation summary.",
      "elements": [
        {
          "kind": "table",
          "field": "risks",
          "required": true,
          "tableSpec": {
            "headers": ["Risk", "Impact", "Mitigation"],
            "rows": { "desc": "Rows of short text" }
          },
          "source": ["risks.table", "risks.list"]
        }
      ]
    },
 
    {
      "type": "outcomes",
      "desc": "Expected outcomes or success metrics.",
      "elements": [
        { "kind": "bullets", "field": "outcomes", "required": true, "itemDesc": "Expected measurable results", "source": ["outcomes.list", "impact"] }
      ]
    },
 
    {
      "type": "closing",
      "desc": "Closing statement and contact details.",
      "elements": [
        { "kind": "text", "field": "quote", "required": false, "desc": "Final line / message", "source": ["closing.quote"] },
        { "kind": "text", "field": "contact", "required": false, "desc": "Contact info", "source": ["closing.contact"] }
      ]
    }
  ]
}